<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/2789328/pexels-photo-2789328.jpeg?cs=srgb&dl=two-brown-liquid-inside-clear-drinking-glasses-2789328.jpg&fm=jpg)">
  <div class="container">
    <h1>Make your first cocktail</h1>
      <button type="button" class="btn btn-secondary">
        <%= link_to "Add a new cocktail", new_cocktail_path %>
      </button>
  </div>
</div>

<div class="d-flex">
  <% @cocktails.each do |c| %>
    <div class="card" style="width: 18rem;">
      <%=image_tag "https://source.unsplash.com/1600x900/?cocktail", class: "card-img-top" %>

      <div class="card-body">
        <p class="card-text"><%= link_to c.name, cocktail_path(c) %></p>
      </div>
    </div>
  <% end %>


</div>
